<% content_for :head do %>
  <link rel="alternate" 
    type="application/rss+xml" 
    title="MyQuotable: <%= @user.login %>'s Quotes" 
    href="<%= formatted_user_quotes_path(@user, :rss) %>" />
<% end %>


<% content_for :pagename do %>
 <%= @user.login %>'s Home
<% end %>
<% content_for :statusbar do %>
 <%= @user.login %> -> Quotes -> all (<%= @user.quotes.count %>)
<% end %>

<% @quotes = (current_user == @user) ?  @user.quotes.descending : @user.quotes.public.descending %>
<%= render :partial => "quotes/quote_container" %>
